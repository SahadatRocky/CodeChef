#include<bits/stdc++.h>
using namespace std;
typedef long long int ll;

int main(){
	   
	  vector<int> v;
	  ll n;
	  cin>>n;
	  while(n--){
	  	ll a,b;
	  	cin>>a;
	  	for(int i=0;i<a;i++){
	  		   cin>>b;
	  		   v.push_back(b);
	  		}
	  	
	  	
	  	sort(v.begin(),v.end());
	  	
	  	
	  		cout<<v[0]+v[1]<<endl;
	
	  	v.clear();
	  	}
       return 0;
}
